<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row text-center">
<h1><%= @player.name %></h1><%= link_to 'Track', new_track_path(:player_id => @player.id) %> <br><br>

    <div class="col-lg-offset-5" style="min-height:200px; padding-left:60px;">
      <table>
        <thead>
        <tr>
        </tr>
        </thead>

        <tbody>
        <% @player.tracks.order(updated_at: :desc).each do |track| %>
          <tr data-link="<%= track_path track%>">
            <% if track.raided %>
              <td class="tdhover" style="color:grey"><%= track.x%>, <%= track.z%></td>
            <% elsif (track.xMaxN.to_i - track.xMinN.to_i).abs < 101%>
              <td class="tdhover" style="color:#95ff99"><%= track.xN%>, <%= track.zN%></td>
            <% else %>
              <td class="tdhover" style="color:#ffa47b"><%= track.xN%>, <%= track.zN%></td>
            <% end%>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

<%= link_to 'Back', players_path %>